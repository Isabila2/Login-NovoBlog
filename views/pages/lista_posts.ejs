  margin-bottom: 20px;
  padding: 20px;
  border: 1px solid #dee2e6;
  border-radius: 10px;
  background-color: #fff;
}

.list-group-item h5 {
  color: #007bff;
}

.list-group-item p {
  color: #6c757d;
}

